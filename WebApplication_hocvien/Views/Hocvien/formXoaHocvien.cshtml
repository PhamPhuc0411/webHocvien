@model WebApplication_hocvien.MyModels.CHocvien

@{
    ViewData["Title"] = "formXoaHocvien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>formXoaHocvien</h1>

<p>
    <a asp-action="Index">Back to List</a>
</p>
<div>
    <h4>CHocvien</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mshv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mshv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tenhv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenhv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ngaysinh)
        </dt>
        <dd class="col-sm-10">
            @Model.Ngaysinh.Value.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phai)
        </dt>
        <dd class="col-sm-10">
            @(Model.Phai == true ? "Nam" : "Nu")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Malop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Malop)
        </dd>
    </dl>
    </div>
@if ((bool)ViewBag.flagXoa == true)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>

        <form asp-action="xoaHocvien" method="post">
            <input type="hidden" name="mshv" value="@Model.Mshv"/>
            <input type="submit" value="Xoa" class="btn btn-danger" /> |
        </form>
    </div>
}
else
{
    <h3>Ban khong the xoa hoc vien nay</h3>
}
