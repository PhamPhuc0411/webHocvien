@model WebApplication_hocvien.Models.Lylich

@{
    ViewData["Title"] = "xemDiemHocvien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>xemDiemHocvien</h1>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <h4>Lylich</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Ma so hoc vien
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mshv)
        </dd>
        <dt class = "col-sm-2">
            Ten hoc vien
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenhv)
        </dd>
        <dt class = "col-sm-2">
            Ngay sinh
        </dt>
        <dd class = "col-sm-10">
            @Model.Ngaysinh.Value.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            Phai
        </dt>
        <dd class = "col-sm-10">
            @(Model.Phai==true?"Nam":"Nu")
        </dd>
        <dt class = "col-sm-2">
            Ma lop
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Malop)
        </dd>
    </dl>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Ma mon hoc
                </th>
                <th>
                    Ten mon hoc
                </th>
                <th>
                    So tiet
                </th>
                <th>
                    Diem
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Diemthis)
            {
                <tr>
                    <td>
                        @item.Msmh
                    </td>
                    <td>
                        @item.MsmhNavigation.Tenmh
                    </td>
                    <td>
                        @item.MsmhNavigation.Sotiet
                    </td>
                    <td>
                        @item.Diem
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>